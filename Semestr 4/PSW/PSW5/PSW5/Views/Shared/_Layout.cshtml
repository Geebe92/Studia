<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PSW5</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />

</head>

<body>
    <header>
        <a class="project-name">PSW 5</a>
        <nav>
            <ul class="nav-links">
                <li class="nav-item">
                    <a id="HomeLink" class="nav-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
            </ul>

        </nav>
       <a id="LoginLink" class="nav-item" asp-area="" asp-controller="Login" asp-action="Index">Logowanie</a>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="footer">
        <p>&copy; 2022 - Natan Zabłocki</p>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
